<div class="row container col-12 post-view-form">
  <div class="col-8">
    <p class="level-item">
      <% if current_user == @post.user %>
      <%= link_to "Edit", edit_post_path(@post), class:"button" %> |

      <%= link_to "Delete", post_path(@post),
                  method: :delete, data: { confirm: "Are you sure?" }, class:"button is-danger" %>
      <%= image_tag @post.image_url, width: '600' %><br/>
        <% end %>
    </p>
  </div>

  <div class="col-4 post-view-right">
    <b><%= @post.user.username %></b>
     at <%= @post.created_at %>
    write: <br/>

    <%= @post.description %><br/>
  </div>
</div>